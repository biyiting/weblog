<div class="post-toc">
    <p class="post-toc-title">目录</p>
    <%- toc(page.content) %>
</div>
<script>
document.addEventListener("DOMContentLoaded", function () {
    $(document).on( 'click', '.toc-link', function(e){
        e.preventDefault();

        const [,hash] = e.currentTarget.href.split('#');
        toTopAppointPosition($(`#${decodeURI(hash)}`).last().offset().top-70);
    })
});
</script>