
<div id="tag">
  <div class="left">
    <h1><%=page.tag%></h1>
    <% page.posts.each(article => { %>
      <% console.log('-----')%>
      <% console.log(article)%>
      <div class="tag-item">
        <a href="<%=url_for(article.path)%>">
          <%=article.title%>
        </a>
        <time datetime="<%=date_xml(article.date)%>">
          <%=date(article.date)%>
        </time>
      </div>
    <% }) %>
  </div>
  <div class="right">
    <div class="info-box"><%-partial('partials/personal-info')%></div>
    <div class="list-box"><%-partial('partials/tag-list')%></div>
  </div>
</div>

<div id="paginator">
   <%- paginator({    
    prev_text: '上一页',  
    next_text: '下一页',    
    escape: false,
    prev_next: true,
  }) %>
</div>
