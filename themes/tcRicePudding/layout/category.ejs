<%-partial('widgets/header', {}, {cache: true})%>

<div id="category">
  <!-- <h1><%=page.category%></h1> -->
  
  <div id="category-left-aside" class="category-left-aside">
    <%- list_categories(site.categories) %>
  </div>
  <div class="category-md-content">
  <% if (page.posts) { %>
    <% page.posts.each(article => { %>
      <div class="category-item-body">
        <div class="category-item">
          <a class="cf-article-title" href="<%=url_for(article.path)%>">
            <%=article.title%>
          </a>
          <div class="cf-article-bottom">
            <time class="category-time" datetime="<%=date_xml(article.date)%>">
              <%=date(article.date)%>
            </time>
            <div class="category-phone"></div>
          </div>
          
        </div>
      </div>
      
    <% }); %>
  <% } %>
  </div>
</div>

